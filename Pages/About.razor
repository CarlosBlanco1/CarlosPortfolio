    <script>

        function displayCurrentTime(timezone) {

            var isInSameTimezone = "";

            const userTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;

            if (userTimezone === timezone) {

                isInSameTimezone = "We are in the same timezone!";
            }
            else {
                isInSameTimezone = "We are not in the same timezone!";
            }

            const timezoneElement = document.getElementById("inSameTimezone");
            timezoneElement.innerHTML = isInSameTimezone;

            const currentTime = new Date();

            const options = {
                timeZone: timezone,
                hour12: false,
                hour: "2-digit",
                minute: "2-digit",
            }

            const formattedTime = currentTime.toLocaleString("en-US", options);

            const timeElement = document.getElementById("time-ctn");
            timeElement.innerHTML = `
            <span class="text-[#dc2626] text-4xl font-bold">${formattedTime}</span> <span class="text-xl">${timezone}</span>
            `;

            const date = new Date();

            const formattedDate = date.toLocaleDateString("en-US", {
                weekday: "long",
                year: "numeric",
                month: "long",
                day: "numeric"
            });

            const dateElement = document.getElementById("date-ctn");
            dateElement.innerHTML =
                `<span class="text-xl">${formattedDate}</span>`;

        }

        displayCurrentTime("America/Denver");

        setInterval(() => displayCurrentTime("America/Denver"), 60000);
    </script>

